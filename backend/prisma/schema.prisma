generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./server.db"
}

model User {
  id        String     @id @default(uuid())
  phone     String
  password  String
  schedules Schedule[]
}

model Barber {
  id        String     @id @default(uuid())
  phone     String
  password  String
  services  Services[]
  schedules Schedule[]
}

model Services {
  id       Int    @id @default(autoincrement())
  name     String
  price    Float
  barberId String
  barber   Barber @relation(fields: [barberId], references: [id])
}

model Schedule {
  id       Int      @id @default(autoincrement())
  dateTime DateTime
  userId   String
  barberId String
  barber   Barber   @relation(fields: [barberId], references: [id])
  user     User     @relation(fields: [userId], references: [id])
}
